<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/trailer_item_height">

    <com.bokorzslt.ui.generic.views.RoundedCornerImageView
        android:id="@+id/trailer_image"
        android:layout_width="@dimen/trailer_image_width"
        android:layout_height="@dimen/trailer_image_height"
        android:layout_marginBottom="@dimen/margin_12"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:round_radius="@dimen/trailer_image_corner_radius"
        app:rounded_bottom_left="true"
        app:rounded_bottom_right="true"
        app:rounded_top_left="true"
        app:rounded_top_right="true" />

    <TextView
        android:id="@+id/trailer_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_12"
        android:layout_marginEnd="@dimen/margin_default"
        android:ellipsize="end"
        android:fontFamily="@font/urbanist_bold"
        android:maxLines="1"
        android:textColor="@color/greyscale_900"
        android:textSize="@dimen/text_size_heading_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/trailer_image"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>