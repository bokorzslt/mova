<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationView">
        <item name="android:fontFamily">@font/urbanist_bold</item>
    </style>

    <style name="Title">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_background_red_filled</item>
        <item name="android:drawablePadding">@dimen/button_drawable_padding</item>
        <item name="android:fontFamily">@font/urbanist_semibold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/button_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/button_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/button_vertical_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="StrokeButton" parent="@style/Button">
        <item name="android:background">@drawable/button_background_red_stroke</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/greyscale_500</item>
        <item name="tabSelectedTextColor">@color/red</item>
        <item name="tabIndicatorColor">@color/red</item>
        <item name="tabIndicatorHeight">@dimen/details_tab_indicator_height</item>
        <item name="tabTextAppearance">@style/TabText</item>
        <item name="tabIndicator">@drawable/button_background_red_filled</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/urbanist_semibold</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>